{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "launch Part 1",
            "type": "shell",
            "command": "${command:cmake.launchTargetPath}",
            "args": ["./data", "1", ">", "output_task_1.log"],
            "options": {
                "cwd": "${workspaceFolder}/build",
                "env": {
                    "OMP_NUM_THREADS": "15"
                }
            }
        },
        {
            "label": "launch Part 2",
            "type": "shell",
            "command": "${command:cmake.launchTargetPath}",
            "args": ["./data", "2", ">", "output_task_2.log"],
            "options": {
                "cwd": "${workspaceFolder}/build",
                "env": {
                    "ASAN_OPTIONS": ""
                }
            }
        },
        {
            "label": "launch Part 3",
            "type": "shell",
            "command": "${command:cmake.launchTargetPath}",
            "args": ["./data", "3", ">", "output_task_3.log"],
            "options": {
                "cwd": "${workspaceFolder}/build",
                "env": {
                    "ASAN_OPTIONS": ""
                }
            }
        }
    ]
}